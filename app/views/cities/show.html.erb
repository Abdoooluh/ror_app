<p style="color: green"><%= notice %></p>

<%= "City: #{@city.name}" %>
<br>
<%= "Country: #{@city&.country&.name || 'Not Available'}" %>


<div>
  <button class="btn btn-outline-success"><%= link_to "Edit this city", edit_city_path(@city), style: 'color:white; text-decoration:none' %></button> |
  <button class="btn btn-outline-warning"><%= link_to "Back to cities", cities_path, style: 'color:white; text-decoration:none' %></button>
<br><br>
  <%= button_to "Destroy this city", @city, method: :delete %>
</div>
