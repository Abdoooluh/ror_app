
<div id="<%= dom_id(@order) %>">
  <h1>Order Details</h1>
  
  <p>
    <strong>Order Number:</strong>
    <%= @order.id %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= @order.status %>
  </p>
  <p>
    <strong>User:</strong>
    <%= @order.user&.full_name || "User not found" %>
  </p>
  <p>
    <strong>Product:</strong>
    <%= @order.product&.name || "Product not found" %>
  </p>
  <p>
    <strong>Created At:</strong>
    <%= l(@order.created_at, format: :long) %>
  </p>
  <p>
    <strong>Updated At:</strong>
    <%= l(@order.updated_at, format: :long) %>
  </p>

  <div class="mt-3">
    <% if can? :edit, @order %>
    <button class="btn btn-outline-primary">
      <%= link_to "Edit this order", edit_order_path(@order), style: 'color:white; text-decoration:none' %>
    </button> |
    <% end %>
    <% if can? :read, Order %>
    <button class="btn btn-outline-warning">
      <%= link_to "Back to Orders", orders_path, style: 'color:white; text-decoration:none' %>
    </button> | 
    <% end %>
    <% if can? :read, Product %>
    <button class="btn btn-outline-warning">
      <%= link_to "Back to Products", products_path, style: 'color:white; text-decoration:none' %>
    </button>
    <br><br>
    <% end %>
    <% if can? :delete, @order %>
    <%= button_to "Destroy this order", @order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
    <% end %>
  </div>
</div>
