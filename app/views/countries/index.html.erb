<% content_for :title, "Countries" %>

<h1>Countries</h1>

<div id="flash-messages">
  <% if notice %>
    <p style="color: green"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p style="color: red"><%= alert %></p>
  <% end %>
</div>


<div id="countries">
  <% @countries.each do |country| %>
  <div class="row">
    <div class="col-md-3 mb-3">
      <%= country.name %>
    </div>

    <div class="col-md-3 mb-3">
      <p>
        <button class="btn btn-outline-success"><%= link_to "Show this country", country, style: 'color:white; text-decoration:none' %></button>
      </p>
    </div>
  </div>
  <% end %>
</div>

<button class="btn btn-outline-primary"><%= link_to "New country", new_country_path, style: 'color:white; text-decoration:none' %></button>
