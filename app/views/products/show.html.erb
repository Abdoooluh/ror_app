<p style="color: green"><%= notice %></p>

<div id="<%= dom_id(@product) %>">
  <h1>Product Details</h1>
  <p>
    <strong>Sku:</strong>
    <%= @product.sku %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>
  <p>
    <strong>Unit Cost:</strong>
    <%= number_to_currency(@product.unit_cost) %>
  </p>
  <p>
    <strong>Vendor:</strong>
    <%= @product.vendor&.full_name || "Vendor not found" %>
  </p>

  <div class="mt-3">
    <button class="btn btn-outline-success">
      <%= link_to "Edit this product", edit_product_path(@product), style: 'color:white; text-decoration:none' %>
    </button> |
    <button class="btn btn-outline-warning">
      <%= link_to "Back to products", products_path, style: 'color:white; text-decoration:none' %>
    </button>
    <br><br>
    <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
  </div>
</div>
