<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Cell Number</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.cell_number %></td>
        <td>
          <%= link_to 'Show', user, class: 'btn btn-outline-success' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-primary' %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

  <%= link_to 'New User', new_user_path, class: 'btn btn-outline-primary' %>
