<%= form_with(model: user, local: true) do |form| %>
  <div class="form-group">
    <% if user.errors.any? %>
      <div id="error_explanation" style= "color: red;">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  
<div class="form-group">
    <div class="field">
      <%= form.label :cell_number %>
      <%= form.text_field :cell_number, class: "form-control" %>
    </div>
</div>

  <div class="form-group">
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <br>

<div class="form-group">
  <div class="field">
    <%= form.label :country_id %>
    <%= form.collection_select :country_id, Country.all, :id, :name, prompt: "Select a country", id: 'country_select' %>
  </div>
</div>

<br>

<div class="form-group">
  <div class="field">
    <%= form.label :city_id %>
    <%= form.collection_select :city_id, [], :id, :name, prompt: "Select a city", id: 'city_select' %>
  </div>
</div>

  <br>

  <div class="form-group">
    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
  
  <br>

<% end %>
