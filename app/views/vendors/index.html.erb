<h1>Vendors</h1>


<table class="table">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Cell Number</th>
      <th>Vendor Type</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.full_name %></td>
        <td><%= vendor.email %></td>
        <td><%= vendor.cell_number %></td>
        <td><%= vendor.vendor_type %></td>
        <td style="display: flex; gap: 5px;">
            <%= button_to 'Show', vendor, class: 'btn btn-outline-success', style: 'margin: 0;' %>
            <%= button_to 'Edit', edit_vendor_path(vendor), class: 'btn btn-outline-primary', style: 'margin: 0;' %>
            <%= button_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger', style: 'margin: 0;' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor', new_vendor_path, class: 'btn btn-outline-primary' %>