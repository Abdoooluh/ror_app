<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid justify-content-between">
    <div class="d-flex align-items-center">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Users", users_path, class: "nav-link" %>
            </li>
          <% end %>
          <% if vendor_signed_in? %>
            <li class="nav-item">
              <%= link_to "Vendors", vendors_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Products", products_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Orders", orders_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "City", cities_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Country", countries_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </div>
    <div class="d-flex align-items-center justify-content-between">
      <% if user_signed_in? || vendor_signed_in? %>
        <% if user_signed_in? %>
          <span style="margin-right: 20px;">
            Signed in as <%= current_user.full_name %> (User)
          </span>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to sign out?" } %>
        <% elsif vendor_signed_in? %>
          <span style="margin-right: 20px;">
            Signed in as <%= current_vendor.full_name %> (Vendor)
          </span>
          <%= button_to "Sign Out", destroy_vendor_session_path, method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to sign out?" } %>
